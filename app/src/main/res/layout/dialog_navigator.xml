<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/dialog_inset">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:cardCornerRadius="5dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white"
            android:orientation="vertical">

            <ImageView
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="20dp"
                android:background="@drawable/bt_oval_yellow"
                android:padding="15dp"
                android:scaleType="centerInside"
                android:src="@drawable/ic_select_navigator" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:text="Выберите навигатор"
                android:textColor="@color/textGrayDark"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/standart"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@drawable/bt_light_gray"
                android:gravity="center"
                android:text="Стандартный"
                android:textAlignment="center"
                android:textAllCaps="true"
                android:textColor="@color/textGrayDark"
                android:textSize="18sp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/lineLightGray"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@id/pic" />

            <TextView
                android:id="@+id/gis"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@drawable/bt_light_gray"
                android:gravity="center"
                android:text="2гис"
                android:textAlignment="center"
                android:textAllCaps="true"
                android:textColor="@color/textGrayDark"
                android:textSize="18sp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/lineLightGray"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@id/pic" />

            <TextView
                android:id="@+id/yandex"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@drawable/bt_light_gray"
                android:gravity="center"
                android:text="Яндекс"
                android:textAlignment="center"
                android:textAllCaps="true"
                android:textColor="@color/textGrayDark"
                android:textSize="18sp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/lineLightGray"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@id/pic" />

            <Button
                android:id="@+id/cansel"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@color/colorAccent"
                android:text="@string/cancell"
                android:textColor="@color/buttonTextGray"
                android:textSize="18sp"
                app:layout_constraintTop_toBottomOf="@id/status_off" />

        </LinearLayout>

    </androidx.cardview.widget.CardView>

</FrameLayout>